{
    "rules": {
        "sort-vars": 0,
        "no-new": 0,
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "space-before-function-paren": [
            2,
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "func-style": [
            2,
            "declaration"
        ]
    },
    "env": {
        "node": true,
        "mocha": true
    }
}